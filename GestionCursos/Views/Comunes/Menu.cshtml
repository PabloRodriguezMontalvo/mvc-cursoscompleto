@using GestionCursos.Models.ViewModels
@model IEnumerable<GestionCursos.Models.ViewModels.MenusViewModel>

@{
    Layout = null;
}

<ul class="nav navbar-nav">

    @foreach (var item in Model)
    {
        if (item.Hijos.Any())
        {
            <li class="dropdown">
                <a href="#" class="dropdown-toggle"
                   data-toggle="dropdown"
                   role="button"
                   aria-expanded="false">
                    @item.Nombre
                    <span class="caret"></span>
                </a>
                @submenu(item.Hijos)
            </li>
        }
        else
        {
            <li><a href="@item.url">@item.Nombre</a></li>
        }


    }
</ul>




@helper submenu(IEnumerable<MenusViewModel> menu )
    {
        <ul class="dropdown-menu" role="menu">
           @foreach (var item in menu)
           {
               if (item.Hijos.Any())
               {
                <li class="dropdown">
            <a href="#" class="dropdown-toggle"
               data-toggle="dropdown"
               role="button"
               aria-expanded="false">
                @item.Nombre
                <span class="caret"></span>
            </a>

                @submenu(item.Hijos)
                </li>
                }
                else
                {
                <li><a href="@item.url">@item.Nombre</a></li>
               }
           }
        </ul>
    }

            



        

